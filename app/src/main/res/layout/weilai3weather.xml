<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_wl_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/h103"/>
    <LinearLayout
        android:layout_toRightOf="@+id/iv_wl_weather"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_wl_date"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天"
        android:textSize="@dimen/modelSize"/>
        <TextView
            android:id="@+id/tv_wl_weather"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多云"
            android:textSize="@dimen/smallSize"/>
        </LinearLayout>
    <TextView
        android:id="@+id/tv_wl_weathercode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="20~30度"
        android:layout_centerVertical="true"
        android:textSize="@dimen/modelSize"
        android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>